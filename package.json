{
    "$schema": "https://www.schemastore.org/package.json",
    "name": "micro-domains-mono",
    "description": "A web service for buying short domain names.",
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "check-types": "turbo run check-types",
        "test": "turbo run test",
        "test:watch": "turbo run test:watch",
        "lint": "turbo run lint",
        "lint:fix": "turbo run lint:fix",
        "format": "biome format --write .",
        "validate": "turbo run validate"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.8",
        "@commitlint/cli": "^20.2.0",
        "@commitlint/config-conventional": "^20.2.0",
        "@types/bun": "^1.3.3",
        "lefthook": "^2.0.8",
        "rimraf": "^6.1.2",
        "turbo": "^2.6.3",
        "typescript": "5.9.2"
    },
    "packageManager": "bun@1.3.0",
    "engines": {
        "node": ">=22",
        "bun": ">=1.3"
    },
    "workspaces": [
        "apps/*",
        "modules/*",
        "packages/*"
    ]
}
