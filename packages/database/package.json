{
    "name": "@repo/database",
    "version": "1.0.0",
    "description": "TypeORM database package with entities, services, and migrations",
    "private": true,
    "type": "module",
    "module": "src/index.ts",
    "main": "src/index.ts",
    "types": "src/index.ts",
    "scripts": {
        "check-types": "tsc --noEmit",
        "test": "bun test",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "validate": "echo \"Validated\"",
        "migration:create": "bash scripts/create-migration.sh",
        "migration:generate": "bash scripts/generate-migration.sh",
        "migration:show": "bun --bun typeorm migration:show -d src/dataSource.ts",
        "migration:run": "bun --bun typeorm migration:run -d src/dataSource.ts",
        "migration:revert": "bun --bun typeorm migration:revert -d src/dataSource.ts"
    },
    "dependencies": {
        "@repo/shared-types": "*",
        "dotenv": "^17.2.3",
        "inflection": "^3.0.2",
        "mysql2": "^3.15.3",
        "pino": "^10.1.0",
        "reflect-metadata": "^0.2.2",
        "tsyringe": "^4.10.0",
        "typeorm": "^0.3.28",
        "typeorm-pino-logger": "^0.2.0"
    },
    "devDependencies": {
        "@ngneat/falso": "^8.0.2",
        "@repo/typescript-config": "*",
        "pino-pretty": "^13.1.3"
    },
    "peerDependencies": {
        "typescript": "^5",
        "@types/bun": "^1.3"
    }
}
