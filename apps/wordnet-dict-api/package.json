{
    "name": "@repo/wordnet-dict-api",
    "version": "1.0.0",
    "private": true,
    "description": "A dictionary microservice using WordNet data, Hono, and Drizzle ORM.",
    "type": "module",
    "main": "src/index.ts",
    "scripts": {
        "dev": "bun --hot src/index.ts",
        "build": "bun build src/index.ts --outdir dist --target bun",
        "start": "bun run dist/index.js",
        "check-types": "tsc --noEmit",
        "test": "bun test",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "validate": "echo \"Validated\"",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "bun src/db/migrate.ts",
        "cli": "bun run src/cli.ts"
    },
    "dependencies": {
        "@repo/cli-helper": "*",
        "commander": "^14.0.2",
        "drizzle-orm": "^0.32.0",
        "hono": "^4.5.1",
        "reflect-metadata": "^0.2.2",
        "wordnet-db": "^3.1.14"
    },
    "devDependencies": {
        "@repo/typescript-config": "*",
        "@types/bun": "latest",
        "drizzle-kit": "^0.23.0"
    }
}
