{
    "name": "@repo/wordnet-dict-api",
    "version": "1.0.0",
    "private": true,
    "description": "A dictionary microservice using WordNet data, Hono, and Drizzle ORM.",
    "type": "module",
    "main": "src/index.ts",
    "scripts": {
        "dev": "bun --hot src/index.ts",
        "build": "bun build src/index.ts --outdir dist --target bun",
        "start": "bun run dist/index.js",
        "check-types": "tsc --noEmit",
        "test": "bun test",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "validate": "echo \"Validated\"",
        "cli": "bun run src/cli.ts",
        "migrate": "bun run scripts/migrate.ts",
        "postinstall": "cd node_modules/wordnet && bun run build"
    },
    "dependencies": {
        "@repo/cli-helper": "*",
        "commander": "^14.0.2",
        "hono": "^4.5.1",
        "kysely": "^0.28.8",
        "kysely-bun-sqlite": "^0.4.0",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.3",
        "reflect-metadata": "^0.2.2",
        "wordnet-db": "^3.1.14",
        "wordnet": "github:angelxmoreno/wordnet#main"
    },
    "devDependencies": {
        "@repo/typescript-config": "*",
        "@types/bun": "latest"
    }
}
