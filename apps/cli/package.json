{
    "name": "@repo/cli",
    "version": "1.0.0",
    "description": "A command-line interface for the project.",
    "private": true,
    "type": "module",
    "module": "src/index.ts",
    "scripts": {
        "dev": "bun run src/index.ts",
        "build": "bun build src/index.ts --outdir dist --target bun",
        "start": "bun run dist/index.js",
        "check-types": "tsc --noEmit",
        "test": "bun test",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "validate": "echo \"Validated\""
    },
    "dependencies": {
        "@repo/shared-types": "*",
        "@repo/config-builder": "*",
        "commander": "^14.0.2",
        "inquirer": "^13.0.2",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.3",
        "reflect-metadata": "^0.2.2"
    },
    "devDependencies": {
        "@repo/typescript-config": "*",
        "tsyringe": "^4.10.0"
    },
    "peerDependencies": {
        "typescript": "^5",
        "@types/bun": "^1.3"
    }
}
